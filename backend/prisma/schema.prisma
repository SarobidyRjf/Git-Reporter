generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id          String   @id @default(cuid())
  githubId    String   @unique
  name        String?
  email       String?
  avatarUrl   String?
  githubToken String?
  reports     Report[]
}

model Report {
  id        String   @id @default(cuid())
  userId    String
  repoName  String
  content   String
  sentTo    String?
  method    String   // "email" ou "whatsapp"
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
